<div class="container">
  <table class="table table-striped">
    <tbody>
    <tr>
      <td><strong>Full Name:</strong></td>
      <td><%= @user.fullname %></td>
    </tr>
    <tr>
      <td><strong>Email:</strong></td>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <td><strong>Address:</strong></td>
      <td><%= @user.address %></td>
    </tr>
    <tr>
      <td><strong>Gender:</strong></td>
      <td><%= @user.gender %></td>
    </tr>
    <tr>
      <td><strong>Role:</strong></td>
      <td><%= @user.role %></td>
    </tr>
    <tr>
      <td><strong>Active:</strong></td>
      <td><%= @user.active %></td>
    </tr>
    <tr>
      <td><strong>Order History:</strong></td>
      <td><%= link_to 'Outstanding Orders', orders_show_path(user_id: @user.id, status: true), remote: true %> |
      <%= link_to 'Historical Orders', orders_show_path(user_id: @user.id, status: false), remote: true %></td>
    </tr>
    </tbody>
  </table>

  <div id="show"></div>
  <div id="new"></div>
  <!-- Moved "Destroy" action to show view so user can accurately delete the relevant user!-->

<%= link_to 'Add New Order', new_order_path, remote: true, id: 'NewOrderId', class:"btn btn-dark"%>
<%= link_to 'Edit', edit_user_path(@user), class:"btn btn-dark" %>
  <% if !is_not_admin_or_super? %>
    <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-dark"  %>
  <% end %>
<%= link_to 'Back', users_path, class:"btn btn-dark" %>
</div>