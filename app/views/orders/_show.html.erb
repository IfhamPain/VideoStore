<hr>
<h3>Order History</h3>
<table class="table table-striped">
  <thead class="thead-dark">
  <div class="container pt-3">
  <%= form_tag orders_show_path, :method => 'get' do %>
    <div class="form-row">
      <div class="col">
        <%= text_field_tag :order_date, params[:order_date], placeholder:"Order Date",class: "form-control" %>
      </div>
      <div class="col">
        <%= text_field_tag :return_date, params[:return_date], placeholder:"Return Date",class: "form-control"  %>
      </div>
      <div class="col">
        <%= text_field_tag :expiration_date, params[:expiration_date_date], placeholder:"Expiration Date",class: "form-control"  %>
      </div>
      <div class="col">
        <%= text_field_tag :status, params[:status], placeholder:"Status",class: "form-control"  %>
      </div>
      <div class="col">
        <%= submit_tag "Search", class: "btn btn-dark" %>
      </div>
    </div>
  <%end%>
</div>
</thead >

  <div class="container pt-3">
    <thead class="thead-dark">
    <tr>
      <th>Order Id</th>
      <th>Order Date</th>
      <th>Return Date</th>
      <th>Expiration Date</th>
      <th>Status</th>
      <th>Movie</th>
    </tr>
    </thead>

    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.order_date %></td>
        <td><%= order.return_date %></td>
        <td><%= order.expiration_date %></td>
        <td><%= order.status %></td>
        <td>
          <% order.movie_copy_orders.each do |copy| %>
            <%= link_to copy.movie_copy.movie.title, copy.movie_copy.movie  %>
          <%end %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td><div class="btn btn-dark" id="close-show"><h4>Hide</h4></div></td>
    </tr>
    </tbody>
  </div>
  </table>
<hr style="border: 5px solid black; border-radius: 5px;">


