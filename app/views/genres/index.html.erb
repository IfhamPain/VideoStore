<h1 align="center">Genres</h1>
<center><%= link_to "Add New", new_genre_path, class:"btn btn-dark" %></center>
<table class="table">
  <div class="container pt-3">
    <thead class="thead-dark">
    <tr>
      <th>Genre</th>
      <th colspan="3">Customize</th>
    </tr>
    </thead>

    <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td class="align-middle"><%= genre.genre %></td>
        <td class="align-middle"><%= link_to 'Edit', edit_genre_path(genre) %></td>
        <td class="align-middle">
          <% if !is_not_admin_or_super? %>
            <%= link_to 'Destroy', @genre, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-dark"  %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </div>
</table>