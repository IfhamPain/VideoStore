<%= form_with model: @actor, local: true do |f| %>
  <table class="table table-striped">
    <thead class="thead-dark">
    <tr>
      <th colspan="2">Actor</th>
    </tr>
    </thead>
    <tr>
      <td> <%= f.label :name %></td>
      <td> <%= f.text_field :name, :maxlength=>"50"%></td>
    </tr>
    <tr>
      <td><%= f.label :date_of_birth %></td>
      <td><%= f.date_select :date_of_birth, as: :date, start_year: Date.today.year - 200 , value: f.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %></td>
    </tr>
    <% if current_page?(new_actor_path) %>
    <tr>
      <td><%= f.label "Movies" %></td>
      <td><%= f.collection_select :movie_ids, Movie.all, :id, :title, {}, {multiple: true, class: 'template-example'} %></td>
    </tr>
    <% end %>
  </table>

  <div class="actions">
    <%= f.submit class:"btn btn-dark"%>
  </div>
  <br><br>
<% end %>