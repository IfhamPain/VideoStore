<h1 align="center">Actors</h1>
<center><%= link_to "Add New", new_actor_path, class:"btn btn-dark" %></center>
<table class="table">
  <thead class="thead-dark">
  <div class="container pt-3">
    <%= form_tag actors_path, :method => 'get' do %>
      <div class="form-row">
        <div class="col">
          <%= text_field_tag :name, params[:name], placeholder:"Actor Name",class: "form-control" %>
        </div>
        <div class="col">
          <%= submit_tag "Search", class: "btn btn-dark" %>
        </div>
      </div>
    <%end%>
  </div>
  </thead >

  <div class="container pt-3">
    <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Date of Birth</th>
      <th colspan="3">Customize</th>
    </tr>
    </thead>

    <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td class="align-middle"><%= actor.name %></td>
        <td class="align-middle"><%= actor.date_of_birth %></td>
        <td class="align-middle"><%= link_to 'Show', actor %></td>
        <td class="align-middle"><%= link_to 'Edit', edit_actor_path(actor) %></td>
      </tr>
    <% end %>
    </tbody>
  </div>
</table>
<%= paginate @actors %>