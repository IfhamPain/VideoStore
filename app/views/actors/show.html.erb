<div class="container">
  <%= form_with model: @actor, local: true do |f| %>
  <table class="table table-striped">
    <tbody>
    <tr>
      <td><strong>Name:</strong></td>
      <td><%= @actor.name %></td>
    </tr>
    <tr>
      <td><strong>Date of Birth:</strong></td>
      <td><%= @actor.date_of_birth %></td>
    </tr>
    <tr>
      <td><%= f.label "Movies" %></td>
      <td><%= f.collection_select :movie_ids, Movie.all, :id, :title, {}, {multiple: true, class: 'template-example'} %></td>
    </tr>
    </tbody>
  </table>
    <div class="actions">
      <%= f.submit class:"btn btn-dark"%>
    </div>
<% end %><br>
  <!-- Moved "Destroy" action to show view so user can accurately delete the relevant user!-->
  <%= link_to 'Edit', edit_actor_path(@actor), class:"btn btn-dark" %>
  <% if !is_not_admin_or_super? %>
    <%= link_to 'Destroy', @actor, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-dark"  %>
  <% end %>
  <%= link_to 'Back', actors_path, class:"btn btn-dark"  %>
</div>